doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Stratego | Game
    link(rel='stylesheet', href='./css/game.css')
    link(rel='stylesheet', href='./css/attack.css')
    script(src='./js/game.js')
    script(src='./js/htmlUtils.js')
    script(src='./js/request.js')
  body
    #root
    .card#attackCard
      .role Attacker
      .cardImage
        img(src='./images/redMarshal.png', alt='attacker')
      .pieceName.pieceInfo
        span Marshal
      .pieceRank.pieceInfo
        span Rank: 10
      .status
        span Won
    .card#defenderCard
      .role Defender
      .cardImage
        img(src='./images/blueMiner.png', alt='attacker')
      .pieceName.pieceInfo
        span Marshal
      .pieceRank.pieceInfo
        span Rank: 10
      .status
        span Lose
